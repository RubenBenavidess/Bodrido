# ============================================
# AUTH SERVICE (Node.js)
# ============================================
NODE_ENV=production
PORT=4000
DB_HOST=auth-db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=admin123
DB_NAME=logiflow_auth
PRIVATE_KEY_PATH=./keys/private.pem
